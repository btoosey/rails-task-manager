<h1><%= @task["title"] %></h1>
<%= link_to "Edit this task", edit_task_path, :class => "link-to" %>
<h2><%= @task["details"] %></h2>
<% if @task.completed %>
  <h2><i class="fas fa-check-square"></i> This task is completed</h2>
<% else %>
  <h2><i class="far fa-check-square"></i> This task is not completed yet</h2>
<% end %>
<%= link_to "Back", tasks_path, :class => "link-to" %>
